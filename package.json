{
  "license": "MIT",
  "scripts": {
    "server": "nodemon --trace-warnings build/src/server.js",
    "start": "node src/server.js",
    "start:docker": "node ./build/src/server.js",
    "build": "tsc",
    "seed:dev": "node build/src/src/api/database/seeders/dev/index.js",
    "seed:test": "node build/src/src/api/database/seeders/test/index.js",
    "dev": "yarn dev:start",
    "dev:start": "yarn dev:check-schema && yarn dev:migrate && concurrently \"tsc -w\" \"yarn server\"",
    "dev:migrate": "dotenv -e .env.dev -- yarn prisma migrate dev",
    "dev:check-schema": "dotenv -e .env.dev -- yarn prisma validate",
    "dev:seed": "dotenv -e .env.test -- yarn seed:dev",
    "test": "yarn test:start",
    "test:start": "yarn test:reset && dotenv -e .env.test -- vitest",
    "test:migrate": "dotenv -e .env.test -- yarn prisma migrate dev",
    "test:reset": "yarn test:migrate-reset && dotenv -e .env.test -- yarn test:seed && yarn test:migrate",
    "test:migrate-reset": "dotenv -e .env.test -- yarn prisma migrate reset -f",
    "test:seed": "dotenv -e .env.test -- yarn seed:test",
    "migrate": "prisma migrate dev && yarn test:migrate"
  },
  "dependencies": {
    "@fastify/env": "^4.2.0",
    "@fastify/error": "^3.2.0",
    "@fastify/jwt": "^6.5.0",
    "@fastify/middie": "^8.1.0",
    "@fastify/multipart": "^7.4.1",
    "@google-cloud/storage": "^6.9.4",
    "@sendgrid/mail": "^7.7.0",
    "axios": "^1.3.2",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^7.2.1",
    "fastify": "^4.12.0",
    "nodemailer": "^6.9.1",
    "ps": "^1.0.0",
    "redis": "^4.6.5",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@prisma/client": "^4.11.0",
    "@types/bcrypt": "^5.0.0",
    "@types/node": "^18.11.18",
    "@types/nodemailer": "^6.4.7",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "@vitest/coverage-c8": "^0.29.3",
    "concurrently": "^7.6.0",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest-mock-extended": "^3.0.4",
    "nodemon": "^2.0.20",
    "prisma": "^4.11.0",
    "supertest": "^6.3.3",
    "typescript": "*",
    "vitest": "^0.29.2",
    "zod-prisma": "^0.5.4"
  }
}
