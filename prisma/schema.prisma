datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Province {
  id                  Int         @id   @default(autoincrement())
  name                String      @db.VarChar(64) @unique
  short_name          String      @db.VarChar(2)  @unique
  global_code         String      @unique @db.VarChar(255)
  formatted_address   String?     @db.VarChar(255)
  type                String?     @db.VarChar(255)
  img_cover           String?     @db.VarChar(255)

  cities              City[]

  created_at          DateTime    @db.Timestamp() @default(now())
  updated_at          DateTime    @db.Timestamp() @updatedAt
  @@map("provinces")
}

model City {
  id                  Int         @id   @default(autoincrement())
  name                String      @db.VarChar(64)
  global_code         String      @unique @db.VarChar(255)
  formatted_address   String?     @db.VarChar(255)
  type                String?     @db.VarChar(255)
  img_cover           String?     @db.VarChar(255)

  province            Province    @relation(fields: [province_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  province_id         Int

  created_at          DateTime    @db.Timestamp() @default(now())
  updated_at          DateTime    @db.Timestamp() @updatedAt

  @@map("cities")
  @@unique([name, province_id, global_code])
}
